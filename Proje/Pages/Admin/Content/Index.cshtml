@page
@model Proje.Pages.Admin.Content.IndexModel

@{
    ViewData["Title"] = "Content";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add Content</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].ContentTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].ContentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].ContentState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].ContentKeywords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content[0].ContentHit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Content)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentKeywords)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentHit)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
